{
  "expo": {
    "name": "LOAF",
    "slug": "LOAF",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "scheme": "loaf",
    "plugins": [
      "expo-router",
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow LOAF to access your microphone to log food."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "useAndroidX": true,
            "enableJetifier": true,
            "extraMavenRepos": [
              "https://www.jitpack.io"
            ]
          }
        }
      ]
    ],
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#143109"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.loaf.app"
    },
    "android": {
      "package": "com.loaf.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8de29483-c74d-47b7-bfd0-c8b2aa8fa9d4"
      },
      "geminiApiKey": "GEMINI_API_KEY_PLACEHOLDER"
    }
  }
}
